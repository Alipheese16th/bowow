<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lec.bowow.dao.ProductImageDao">
	<resultMap type="ProductImage" id="ProductImageResult">
		<result property="imageNum" column="imageNum"/>
		<result property="productCode" column="productCode"/>
		<result property="type" column="type"/>
		<result property="image" column="image"/>
	</resultMap>
	<select id="productImageList" parameterType="ProductImage" resultMap="ProductImageResult">
		SELECT * FROM (SELECT ROWNUM RN, A.* FROM (SELECT * FROM PRODUCTIMAGE) A ORDER BY RN DESC)
    		WHERE RN BETWEEN #{startRow} AND #{endRow}
	</select>
	<select id="totCntProductImage" resultType="int">
		SELECT COUNT(*) FROM PRODUCTIMAGE
	</select>
	<insert id="registerProductImage" parameterType="ProductImage">
		INSERT INTO PRODUCTIMAGE (imageNum, productCode, type, image)
    		VALUES (PRODUCTIMAGE_SEQ.NEXTVAL, #{productCode}, #{type}, #{image})
	</insert>
	<select id="productImageDetail" parameterType="int" resultType="ProductImage">
		SELECT * FROM PRODUCTIMAGE WHERE imageNum = #{imageNum}
	</select>
	<update id="modifyProductImage" parameterType="ProductImage">
		UPDATE PRODUCTIMAGE
		    SET productCode = #{productCode},
		        type = #{type},
		        image = #{image}
		    WHERE imageNum = #{imageNum}
	</update>
	<delete id="deleteProductImage" parameterType="int">
		DELETE FROM PRODUCTIMAGE WHERE imageNum = #{imageNum}
	</delete>
</mapper>