<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lec.bowow.dao.MemberDao">

	<resultMap type="Member" id="MemberResult">
		<result property="memberId" column="memberId"/>
		<result property="memberPw" column="memberPw"/>
		<result property="memberName" column="memberName"/>
		<result property="memberEmail" column="memberEmail"/>
		<result property="memberTel" column="memberTel"/>
		<result property="memberAddr" column="memberAddr"/>
		<result property="memberBirth" column="memberBirth"/>
		<result property="memberAmount" column="memberAmount"/>
		<result property="memberPoint" column="memberPoint"/>
		<result property="gradeno" column="gradeno"/>
	</resultMap>
	
	<select id="idConfirm" parameterType="String" resultType="int">
		SELECT COUNT(*) FROM MEMBER WHERE MEMBERID = #{memberId}
	</select>
	<insert id="joinMember" parameterType="Member">
		INSERT INTO MEMBER (MEMBERID, MEMBERPW, MEMBERNAME, MEMBEREMAIL, MEMBERTEL, MEMBERADDR, MEMBERBIRTH, MEMBERAMOUNT, MEMBERPOINT)
    VALUES (#{memberId}, #{memberPw}, #{memberName}, 'kim@naver.com', '010-5468-3213', '서울시 서대문구 신촌동 신촌이젠아카데미','90-11-08', 100000, 100)
	</insert>
</mapper>
